# 文字コードをUTF-8に設定
export LANG=ja_JP.UTF-8

# プロンプトの色を設定
autoload colors
colors
PROMPT="%{$fg[cyan]%}%n%{$reset_color%}@%{$fg[yellow]%}%m:%{$fg[green]%}%/%f%k%{$reset_color%} %(!.#.$) "

# lsコマンドの設定
alias ls='ls --color'
alias ll='ls -l --color'
alias la='ls -la --color'

# 補完機能を有効にする 
autoload -U compinit
compinit

